<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/act_jnfw_main"
    android:orientation="vertical">
    <include layout="@layout/include_user"/>
    <ScrollView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/avt_jnfw_recycler1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/avt_jnfw_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="英雄联盟"
                        android:textSize="15sp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/avt_jnfw_sf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:orientation="horizontal"
                        android:text="最强王者"
                        android:textSize="10sp"
                        android:textColor="@color/white"
                        android:padding="3dp"
                        android:background="@mipmap/ic_wzbg"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/avt_jnfw_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/red"
                        android:text="￥35/"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:textColor="@color/red"
                        android:text="小时"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/avt_jnfw_yy_L"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/yuyingbg"
                android:gravity="bottom|center_horizontal"
                android:padding="5dp"
                android:layout_margin="10dp">
                <TextView
                    android:id="@+id/avt_jnfw_yy_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red"
                    android:textSize="15sp"
                    android:text="00:16s"/>
                <ImageView
                    android:id="@+id/avt_jnfw_yuyin_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@mipmap/yunying"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>
            <TextView
                android:id="@+id/avt_jnfw_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_margin="10dp"
                android:text="英雄联盟陪玩。等等"/>
            <View
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="2dp"
                android:background="@color/gray"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="评论"
                        android:textSize="15sp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/avt_jnfw_pl_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="（55）"
                        android:textSize="11sp"
                        android:textColor="@color/black"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/avt_jnfw_fen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6分"
                    android:layout_alignParentRight="true"
                    android:textSize="15sp"
                    android:drawableLeft="@mipmap/icon_star"
                    android:drawablePadding="5dp"
                    android:textColor="@color/black"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:descendantFocusability="blocksDescendants">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/avt_jnfw_recycler2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/avt_jnfw_call"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系TA"
            android:padding="15dp"
            android:gravity="center"
            android:background="@color/fen"
            android:textColor="@color/white"
            />
        <TextView
            android:id="@+id/avt_jnfw_buy"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="立即下单"
            android:gravity="center"
            android:background="@color/red"
            android:textColor="@color/white"
            />
    </LinearLayout>
</LinearLayout>