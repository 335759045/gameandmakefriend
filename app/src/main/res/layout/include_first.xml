<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.youth.banner.Banner
            android:id="@+id/fragment_main_banner"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="120dp"
            app:image_scale_type="center_crop"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/fragment_main_one_recycler1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"/>
        <RelativeLayout
            android:id="@+id/fragment_main_one_ph_R"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:background="@drawable/shape_galy_bk">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/main_phb"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textSize="13sp"
                    android:text="排行榜"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">
                <ImageView
                    android:id="@+id/fragment_main_one_ph_image1"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:background="@mipmap/ix_tx"/>
                <ImageView
                    android:id="@+id/fragment_main_one_ph_image2"
                    android:layout_toLeftOf="@+id/fragment_main_one_ph_image1"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginRight="-13dp"
                    android:background="@mipmap/ix_tx"/>
                <ImageView
                    android:id="@+id/fragment_main_one_ph_image3"
                    android:layout_toLeftOf="@+id/fragment_main_one_ph_image2"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginRight="-13dp"
                    android:background="@mipmap/ix_tx"/>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>