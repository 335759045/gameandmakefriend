<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:hedgehog="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/item_comment_heard"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/ix_tx"/>
        <LinearLayout
            android:id="@+id/item_comment_L"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/item_comment_name"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="昵称"
                    android:textColor="@color/black"
                    android:textSize="15sp"/>
                <com.hedgehog.ratingbar.RatingBar
                    android:id="@+id/item_comment_star"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    hedgehog:clickable="false"
                    hedgehog:starCount="5"
                    hedgehog:starEmpty="@null"
                    hedgehog:starFill="@mipmap/star_1"
                    hedgehog:starImageHeight="25dp"
                    hedgehog:starImageWidth="25dp"
                    hedgehog:starImagePadding="8dp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/item_comment_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="跟你玩游戏很郁闷"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/item_comment_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10-11   14:00"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/item_comment_hf_L"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:background="@mipmap/talk_bg"
        android:padding="15dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/item_comment_hf_name"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:text="名字"/>
            <TextView
                android:id="@+id/item_comment_hf_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="10-11   14:00"/>
        </LinearLayout>
        <TextView
            android:id="@+id/item_comment_hf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            android:text="这是一条回复"/>
    </LinearLayout>
</LinearLayout>