<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/titleView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/act_title_main_R"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/act_title_bg">

        <ImageView
            android:id="@+id/act_title_main_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="15dp"
            android:src="@mipmap/icon_back" />


        <TextView
            android:id="@+id/act_title_main_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="18dp"
            android:textColor="@color/black" />

        <LinearLayout
            android:id="@+id/act_title_main_car"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/act_title_main_right"
            android:orientation="horizontal"
            android:padding="3dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <EditText
            android:id="@+id/act_title_main_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/act_title_main_car"
            android:layout_toRightOf="@+id/act_title_main_left"
            android:layout_centerInParent="true"
            android:padding="7dp"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:background="@drawable/shape_galy_bk"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"/>
        <ImageView
            android:id="@+id/act_title_main_search_clean"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/search_del"
            android:padding="8dp"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_alignRight="@+id/act_title_main_search"/>
        <TextView
            android:id="@+id/act_title_main_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="middle"
            android:gravity="center"
            android:maxWidth="200dp"
            android:singleLine="true"
            android:text="- -"
            android:textColor="@color/black"
            android:textSize="17sp" />
    </RelativeLayout>
    <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dp"-->
        <!--android:background="@color/color_e5e5e5"/>-->
</LinearLayout>
