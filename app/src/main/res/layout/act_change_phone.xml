<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp"
        android:background="@color/view_bg">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/shape_galy_bk">
            <EditText
                android:id="@+id/act_change_phone_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:background="@color/transparent"
                android:singleLine="true"
                android:inputType="phone"
                android:maxLength="11"
                android:padding="15dp"
                android:hint="请输入手机号"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_bg"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/act_change_phone_code"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:padding="10dp"
                    android:layout_marginRight="10dp"
                    android:maxLength="8"
                    android:singleLine="true"
                    android:textSize="15sp"
                    android:hint="请输入验证码"/>
                <!--<TextView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:background="@color/fen2"-->
                    <!--android:textSize="15sp"-->
                    <!--android:textColor="@color/red"-->
                    <!--android:paddingLeft="10dp"-->
                    <!--android:paddingRight="10dp"-->
                    <!--android:paddingBottom="5dp"-->
                    <!--android:layout_marginRight="10dp"-->
                    <!--android:paddingTop="5dp"-->
                    <!--android:text="验证码"/>-->
                <com.ihelpers.tm.gameandmakefriend.wedget.CountDownTimerView
                    android:id="@+id/act_change_phone_get_code"
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/shape_galy_bk2"
                    android:textColor="@color/gray_text"
                    style="?android:attr/borderlessButtonStyle"
                    android:text="获取验证码"
                    android:textSize="15sp"/>
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/act_change_phone_sure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="确认"
            android:textColor="@color/white"
            android:layout_margin="25dp"
            android:background="@drawable/shape_red"/>
    </LinearLayout>
</LinearLayout>