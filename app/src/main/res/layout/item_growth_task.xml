<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">
    <LinearLayout
        android:id="@+id/item_growth_task_L"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_jianbian_orange"
        android:padding="20dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/item_growth_task_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发布动态"
                android:textSize="15sp"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/item_growth_task_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="奖励15点，每天1次"
                android:layout_marginTop="10dp"
                android:textSize="13sp"
                android:textColor="@color/white"/>
        </LinearLayout>
        <TextView
            android:id="@+id/item_growth_task_status"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:layout_marginRight="10dp"
            android:textColor="@color/white"
            android:text="已完成"/>
    </LinearLayout>
</LinearLayout>