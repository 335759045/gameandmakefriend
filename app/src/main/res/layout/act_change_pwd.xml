<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/view_bg"
        android:orientation="vertical"
        android:padding="15dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/shape_galy_bk">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="手机号："
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"
                    android:textSize="15sp"/>
                <EditText
                    android:id="@+id/act_change_pwd_phone"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:background="@color/transparent"
                    android:inputType="phone"
                    android:padding="10dp"
                    android:maxLength="11"
                    android:hint="请输入手机号"
                    android:textSize="14sp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_bg"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>
            <LinearLayout
                android:id="@+id/act_change_pwd_pwd_L"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/black"
                        android:text="密码："/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="请输入密码（6-12位数字加字母组合）"
                        android:singleLine="true"
                        android:inputType="phone"
                        android:maxLength="11"
                        android:padding="10dp"
                        android:textSize="14sp"
                        android:background="@color/transparent"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/view_bg"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="验证码："
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"
                    android:textSize="15sp"/>
                <EditText
                    android:id="@+id/act_change_pwd_code"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:background="@color/transparent"
                    android:inputType="phone"
                    android:padding="10dp"
                    android:maxLength="11"
                    android:hint="请输入验证码"
                    android:textSize="14sp"/>
                <com.ihelpers.tm.gameandmakefriend.wedget.CountDownTimerView
                    android:id="@+id/act_change_pwd_get_code"
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/shape_galy_bk2"
                    android:textColor="@color/gray_text"
                    style="?android:attr/borderlessButtonStyle"
                    android:text="获取验证码"
                    android:textSize="15sp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/act_change_pwd_again_L"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/view_bg"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="重置密码："
                        android:textColor="@color/black"
                        android:layout_marginLeft="10dp"
                        android:textSize="15sp"/>
                    <EditText
                        android:id="@+id/act_change_pwd_pwd"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:background="@color/transparent"
                        android:inputType="textPassword"
                        android:padding="10dp"
                        android:maxLength="11"
                        android:hint="请输入要修改的密码"
                        android:textSize="14sp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/act_change_pwd_sure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="确认"
            android:textColor="@color/white"
            android:layout_margin="25dp"
            android:background="@drawable/shape_red"/>
        <LinearLayout
            android:id="@+id/act_change_pwd_L"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="注册即代表您已阅读并同意"/>
            <TextView
                android:id="@+id/act_change_pwd_xy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:textSize="15sp"
                android:text="《用户协议》"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>