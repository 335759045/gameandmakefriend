<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/act_tixian_star"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="拥有星光值：666"
                android:textColor="@color/black"
                android:padding="15dp"
                android:textSize="15sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_galy_bk2"
                android:gravity="center_vertical"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="30dp"
                android:padding="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="兑换数量："/>
                <EditText
                    android:id="@+id/act_tixian_number"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textSize="15sp"
                    android:background="@color/transparent"/>
                <TextView
                    android:id="@+id/act_tixian_max"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="最大额度"
                    android:background="@drawable/shape_room_red"
                    android:textColor="@color/white"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/act_tixian_rmb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:text="可得人民币：8.00"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="30dp"
                android:background="@color/view_bg"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/view_bg"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="提现到："
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:background="@color/white"
                    android:padding="15dp"/>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/act_tixian_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:text="温馨提示：提现时视为同意《免责声明》"/>
                <Button
                    android:id="@+id/act_tixian_sure"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="确认"
                    android:background="@drawable/shape_room_red"
                    android:textColor="@color/white"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginBottom="20dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>