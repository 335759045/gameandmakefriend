<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/shape_trans2_bg"
        android:layout_marginTop="5dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/item_room_talks2_people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="某某人大哥大"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:id="@+id/item_room_talks2_xingwei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="打赏"
            android:textColor="@color/red"
            android:textSize="11sp"/>
        <TextView
            android:id="@+id/item_room_talks2_zhubo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="主播"
            android:textColor="@color/white"
            android:textSize="11sp"/>
        <ImageView
            android:id="@+id/item_room_talks2_gift_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:src="@mipmap/dashang"/>
        <TextView
            android:id="@+id/item_room_talks2_gift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="礼物X1"
            android:textColor="@color/orange"
            android:textSize="11sp"/>
    </LinearLayout>

</LinearLayout>