<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/act_chat_room_title_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="15dp"
            android:src="@mipmap/icon_back_white" />


        <ImageView
            android:id="@+id/act_chat_room_title_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:layout_marginRight="18dp"
            android:src="@mipmap/ic_more"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/act_chat_room_title_left"
            android:layout_toLeftOf="@+id/act_chat_room_title_right"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/act_chat_room_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:ellipsize="middle"
                android:gravity="center"
                android:maxWidth="200dp"
                android:singleLine="true"
                android:text="某某的直播间"
                android:textColor="@color/white"
                android:textSize="17sp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/act_chat_room_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID:12313"
                    android:textSize="13sp"
                    android:textColor="@color/white"/>
                <TextView
                    android:id="@+id/act_chat_room_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="在线: 12"
                    android:textSize="13sp"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>